@page
@model WebdevProjectStarterTemplate.Pages.OberPaginaModel



@*winkelmandje*@
<div>

    <table class="table table-striped">

        <thead>
            <tr>
                <th scope="col">Product</th>
                <th scope="col">Betaald</th>
                <th scope="col">Aantal</th>
                <th scope="col">Tafel</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var order in Model.AllOrders)
            {
                <tr>
                    <td>
                        @order.Name
                    </td>
                    <td>
                        @order.AmountPaid/@order.Amount
                    </td>
                    <td>
                        <div class="d-flex flex-row">                           

                            <span class="px-2 pt-1">@order.Amount</span>

                            <form asp-page-handler="Add" method="post">
                                <input type="hidden" name="Amount" value="@order.Amount">
                                <input type="hidden" name="ProductID" value="@order.ProductID">
                                <input type="hidden" name="TableID" value="@order.TableID">
                            </form>
                            
                            
                        </div>

                    </td>

                    <td>
                        <span class="px-2 pt-1">@order.TableID</span>
                    </td>
                    <td>
                        <form asp-page-handler="RemoveAll" method="post">
                            @*knop om alles van 1 product uit de bestelling te verwijderen*@
                            <button class="btn p-0 m-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                                </svg>
                            </button>
                            <input type="hidden" name="Amount" value="@order.Amount">
                            <input type="hidden" name="ProductID" value="@order.ProductID">
                            <input type="hidden" name="TableID" value="@order.TableID">
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

